    }

    .faq-answer {
      max-height: 0;
      overflow: hidden;
      padding: 0 15px;
      transition: max-height 0.3s ease, padding 0.3s ease;
      background: white;
      font-size: 16px;
      /* adjust the answer font size */
      color: #333;
      border-left: 5px solid #7b61ff;
    }

    .faq-question.active+.faq-answer {
      max-height: none;
      padding: 15px;
    }
